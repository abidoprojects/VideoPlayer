<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="player" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#focus" prefHeight="800" prefWidth="1300" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="video.Controller">
   <children>
      <MediaView fx:id="mv" />
      <MenuBar fx:id="menubar" prefHeight="25.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <menus>
          <Menu fx:id="ortam" mnemonicParsing="false" text="Ortam">
            <items>
              <MenuItem fx:id="video" mnemonicParsing="false" onAction="#videoNew" text="Video Aç" />
            </items>
          </Menu>
          <Menu fx:id="düzenle" mnemonicParsing="false" styleClass="ses" text="Ses">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#mute" text="Mute" />
                  <MenuItem mnemonicParsing="false" onAction="#per25" text="\%25" />
                  <MenuItem mnemonicParsing="false" onAction="#per50" text="\%50" />
                  <MenuItem mnemonicParsing="false" onAction="#per75" text="\%75" />
                  <MenuItem mnemonicParsing="false" onAction="#per100" text="\%100" />
               </items></Menu>
            <Menu mnemonicParsing="false" text="Sound Boost(Beta)">
              <items>
                  <MenuItem fx:id="sb1" mnemonicParsing="false" onAction="#sb1x" text="1x" />
                  <MenuItem fx:id="sb2" mnemonicParsing="false" onAction="#sb2x" text="2x" />
                  <MenuItem fx:id="sb3" mnemonicParsing="false" onAction="#sb3x" text="3x" />
              </items>
            </Menu>
          <Menu fx:id="yardım" mnemonicParsing="false" text="Yardım">
            <items>
              <MenuItem mnemonicParsing="false" text="Hakkında" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Pane fx:id="alt" layoutY="400.0" opacity="0.5" prefHeight="150" visible="false" AnchorPane.bottomAnchor="0">
         <children>
            <Button fx:id="baslat" mnemonicParsing="false" onAction="#play" prefHeight="60" prefWidth="60" />
            <Button fx:id="geri" mnemonicParsing="false" onAction="#backward" prefHeight="35.0" prefWidth="41.0" />
            <Button fx:id="ileri" mnemonicParsing="false" onAction="#forward" prefHeight="35.0" prefWidth="41.0" />
            <Slider fx:id="kaydir" onMousePressed="#sliderPressed" prefHeight="20.0">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Slider>
            <TextField fx:id="sure" editable="false" prefHeight="25.0" prefWidth="85" text="00:00/00:00">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor></TextField>
         </children>
      </Pane>
     
   </children>
</AnchorPane>
